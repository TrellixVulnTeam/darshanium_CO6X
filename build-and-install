#!/bin/bash

autoninja -C out/Default chrome_modern_public_bundle && rm out/Default/apks/ChromeModernPublic.apks out/Default/apks/ChromeModernPublic -rf && java -jar ~/Downloads/bundletool-all-1.9.0.jar build-apks --connected-device --bundle=out/Default/apks/ChromeModernPublic.aab --output=out/Default/apks/ChromeModernPublic.apks --ks=~/src/android/BI_on_googlecode.com/private/my-release-key.keystore --ks-key-alias=alias_name --ks-pass=file:secure.keystore.pw && unzip out/Default/apks/ChromeModernPublic.apks -d out/Default/apks/ChromeModernPublic && adb -d install-multiple out/Default/apks/ChromeModernPublic/splits/*.apk
